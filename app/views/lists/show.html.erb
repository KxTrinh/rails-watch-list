
  <h1><%= @list.name%></h1>
<ul class="list-group">
  <% @bookmarks.each do |bookmark| %>
    <li><%= bookmark.movie.title %> </li>
    <ul>
        <li><%= bookmark.comment %> </li>
        <%= link_to "Delete a bookmark", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </ul>
  <%  end %>
</ul>
