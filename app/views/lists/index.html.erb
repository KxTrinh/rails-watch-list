<h1>Lists#index</h1>
<p>Find me in app/views/lists/index.html.erb</p>

<ul class="list-group">
  <% @lists.each do |list| %>
    <li class="list-group-item"><%= link_to list.name, list_path(list)%></li>
      <ul>
      <li><%= link_to "Delete list", list_path(list.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %></li>
      </ul>
  <% end %>
</ul>
